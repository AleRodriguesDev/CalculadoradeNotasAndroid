<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/nota1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Nota 1"
        android:background="@color/gray_light"
        android:inputType="number"
        android:maxLength="2"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/nota2"

        />

    <EditText
        android:id="@+id/nota2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Nota 2"
        android:background="@color/gray_light"
        android:inputType="number"
        android:maxLength="2"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="50dp"
        app:layout_constraintStart_toEndOf="@id/nota1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <EditText
        android:id="@+id/nota3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Nota 3"
        android:background="@color/gray_light"
        android:inputType="number"
        android:maxLength="2"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nota1"
        app:layout_constraintEnd_toStartOf="@id/nota4"

        />

    <EditText
        android:id="@+id/nota4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Nota 4"
        android:background="@color/gray_light"
        android:inputType="number"
        android:maxLength="2"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        app:layout_constraintStart_toEndOf="@id/nota3"
        app:layout_constraintTop_toBottomOf="@id/nota2"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <EditText
        android:id="@+id/numerodeFaltas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="NÃºmero de faltas"
        android:background="@color/gray_light"
        android:inputType="number"
        android:maxLength="2"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nota3"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <Button
        android:id="@+id/bt_calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/numerodeFaltas"
        android:layout_margin="30dp"
        android:padding="20dp"
        android:backgroundTint="@color/blue"
        />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/bt_calcular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        />



</androidx.constraintlayout.widget.ConstraintLayout>